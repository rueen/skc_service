# 通用环境配置示例

# 服务器配置
NODE_ENV=development

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=password
DB_NAME=skc_service
DB_POOL_LIMIT=10

# 管理后台配置
ADMIN_PORT=3002
ADMIN_BASE_URL=/api/support
ADMIN_JWT_SECRET=admin_jwt_secret_key_change_in_production
ADMIN_JWT_EXPIRES_IN=1d

# H5前端配置
H5_PORT=3001
H5_BASE_URL=/api/h5
H5_JWT_SECRET=h5_jwt_secret_key_change_in_production
H5_JWT_EXPIRES_IN=30d

# 上传文件配置
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880 # 5MB

# 日志配置
LOG_LEVEL=info

# 微信配置 (仅H5前端使用)
WX_APPID=your_wx_appid
WX_SECRET=your_wx_secret

# JWT配置
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# 限流配置
RATE_LIMIT_WINDOW_MS=15*60*1000  # 15分钟
RATE_LIMIT_MAX=100  # 每个IP在时间窗口内最多请求次数 