# Docker Compose 环境变量配置

# 环境
NODE_ENV=production

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=skc
DB_POOL_LIMIT=10

# JWT配置
ADMIN_JWT_SECRET=admin_jwt_secret_key_change_in_production
ADMIN_JWT_EXPIRES_IN=1d
H5_JWT_SECRET=h5_jwt_secret_key_change_in_production
H5_JWT_EXPIRES_IN=7d

# 服务端口
ADMIN_PORT=3002
H5_PORT=3001

# 基础URL
ADMIN_BASE_URL=/api/support
H5_BASE_URL=/api/h5

# 上传文件配置
UPLOAD_DIR=uploads
